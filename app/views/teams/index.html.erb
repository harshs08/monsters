<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td>Name:<%= team.name %></td>
        <td><%= link_to 'Show', user_team_path(@user, team) %></td>
        <td><%= link_to 'Edit', edit_user_team_path(@user, team) %></td>
        <td><%= link_to 'Destroy', user_team_path(@user, team), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Team', new_user_team_path %>
<br>
<%= link_to 'Home', user_path(@user) %>
